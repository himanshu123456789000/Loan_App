<%= render "devise/shared/navbar" %>
<div class="mt-10 sm:mt-0" style="margin-bottom:20%">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Personal Information</h3>
        <p class="mt-1 text-sm text-gray-600">Use a permanent address where you can receive mail.</p>
      </div>
    </div>
    <%= form_with model: @customer do |form| %>
    <div class="overflow-hidden shadow sm:rounded-md">
      <div class="bg-white px-4 py-5 sm:p-6">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-12 sm:col-span-12">
            <%= form.label :Customer_name, class: "block text-sm font-medium text-gray-700" %><br>
            <%= form.text_field :name ,class: "mt-1 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
          </div>

          <div class="col-span-12 sm:col-span-12">
            <%= form.label :Customer_email, class: "block text-sm font-medium text-gray-700"%><br>
            <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
          </div>

          <div class="col-span-12 sm:col-span-12">
            <%= form.label :Customer_contact, class: "block text-sm font-medium text-gray-700"%><br>
            <%= form.telephone_field :contact, class: "mt-1 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
          </div>

          <!--<h2>loan</h2>-->
          <%= form.fields_for :loans do |loan_form| %>
          <div class="col-span-12 sm:col-span-12">
            <%= loan_form.label :Loan_amount, class: "block text-sm font-medium text-gray-700" %>
            <%= loan_form.text_field :amount, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
            </div>

            <div class="col-span-12 sm:col-span-12">
            <%= loan_form.label :No_of_EMI, class: "block text-sm font-medium text-gray-700" %>
            <%= loan_form.text_field :emis, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
            </div>

            <div class="col-span-12 sm:col-span-12">
            <%= loan_form.label :pending_emi, class: "block text-sm font-medium text-gray-700" %>
            <%= loan_form.text_field :pending_emi, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
            </div>

            <div class="col-span-12 sm:col-span-12">
            <%= loan_form.label :Rate_of_interest, class: "block text-sm font-medium text-gray-700" %>
            <%= loan_form.text_field :roi, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
            </div>

            <div class="col-span-12 sm:col-span-12">
            <%= loan_form.label :Loan_status, class: "block text-sm font-medium text-gray-700" %>
            <%= loan_form.text_field :status, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
            </div>
          <% end %>

          <!--<h2>guarentor</h2>-->
          <%= form.fields_for :guarentors do |guarentor_form| %>

          <div class="col-span-12 sm:col-span-12">
            <%= guarentor_form.label :Guarentor_name, class: "block text-sm font-medium text-gray-700" %>
            <%= guarentor_form.text_field :name, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
            </div>

            <div class="col-span-12 sm:col-span-12">
            <%= guarentor_form.label :Guarentor_email, class: "block text-sm font-medium text-gray-700" %>
            <%= guarentor_form.email_field :email, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg" %>
            </div>

            <div class="col-span-12 sm:col-span-12">
            <%= guarentor_form.label :Guarentor_contact, class: "block text-sm font-medium text-gray-700" %>
            <%= guarentor_form.telephone_field :contact, class: "mt-7 block w-full rounded-md border-gray-300 shadow-lg focus:border-indigo-500 focus:ring-indigo-500 sm:text-lg"  %>
            </div>
          <% end %> 
          

        <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
            <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"><%= form.submit %> </button>
          </div>

        <% end %>
</div>
</div>
</div>
</div>
</div>
<%= render "devise/shared/footer" %>