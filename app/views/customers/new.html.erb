<%= render "devise/shared/navbar" %>
<br><br><br>
<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="height:auto; margin-bottom:10%">
  <div class="w-full max-w-md space-y-8">
    <div>
      <!--<img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">-->
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Create New Customer</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
      </p>
    </div>
    <%= form_with(model: @customer, local: true) do |form| %>
      <div class="-space-y-px rounded-md shadow-sm">
        <div>
          <%= form.label :Customer_name, class: "sr-only" %>
          <%= form.text_field :name, autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Customer_name"%>
        </div><br>

        <div>
          <%= form.label :Customer_email, class: "sr-only" %>
          <%= form.email_field :email, autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Customer_email"%>
        </div><br>

        <div>
          <%= form.label :Customer_contact, class: "sr-only" %>
          <%= form.telephone_field :contact, autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Customer Contact Number"%>
        </div><br>

        <!--<h2>Addresses</h2>-->
        <%= form.fields_for :address do |address_form| %>
          <div>
          <%= address_form.label :Customer_address, class: "sr-only" %>
          <%= address_form.text_field :street , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Customer Address"%>
        </div><br>

        <div>
          <%= address_form.label :Customer_City, class: "sr-only" %>
          <%= address_form.text_field :city , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "City"%>
        </div><br>

        <div>
          <%= address_form.label :Customer_state, class: "sr-only" %>
          <%= address_form.text_field :state , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "State"%>
        </div><br>

        <div>
          <%= address_form.label :Customer_zipcode, class: "sr-only" %>
          <%= address_form.text_field :zipcode , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Customer Pincode"%>
        </div><br>
        <% end %>

        <!--document-->
        <%= form.fields_for :document do |document_form| %>
          <div>
            <%= document_form.label :Customer_aadhar_card, class: "sr-only" %>
            <%= document_form.text_field :aadhar_card , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Customer Aadhar Card"%>
          </div><br>

          <div>
            <%= document_form.label :Customer_pancard, class: "sr-only" %>
            <%= document_form.text_field :pancard , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Customer Pancard"%>
          </div><br>
        <%end%>

        <!--<h2>loan</h2>-->
        <%= form.fields_for :loans do |loan_form| %>
          <div>
            <%= loan_form.label :amount, class: "sr-only" %>
            <%= loan_form.text_field :amount , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Amount"%>
          </div><br>

          

          <%= loan_form.hidden_field :status, value:"pending" %>

          <div>
            <%= loan_form.label :duration_year, class: "sr-only" %>
            <%= loan_form.number_field :duration_year, in: 1.0..30.0, step: 1 , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Duration in (years)"%>
          </div><br>

          <div>
            <%= loan_form.label :loan_type %>
            <%= loan_form.select :loan_type,[["personal"], ["business"], ["home"], ["student"]] , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Type of loan"%>
          </div><br>

          <div>
            <%= loan_form.label :file_charge, class: "sr-only" %>
            <%= loan_form.text_field :file_charge , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "File Charges"%>
          </div><br>

          <div>
            <%= loan_form.label :started_at, class: "sr-only" %>
            <%= loan_form.date_field :started_at , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Loan Started Date"%>
          </div><br>
        <%end%>

        <!--<h2>guarentor</h2>-->
        <%= form.fields_for :guarentors do |guarentor_form| %>
          <div>
            <%= guarentor_form.label :name, class: "sr-only" %>
            <%= guarentor_form.text_field :name , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor Name"%>
          </div><br>

          <div>
            <%= guarentor_form.label :email, class: "sr-only" %>
            <%= guarentor_form.text_field :email , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor Email"%>
          </div><br>

          <div>
            <%= guarentor_form.label :contact, class: "sr-only" %>
            <%= guarentor_form.text_field :contact , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor contact"%>
          </div><br>

          <%= guarentor_form.fields_for :address do |address_form| %>
            <div>
              <%= address_form.label :street, class: "sr-only" %>
              <%= address_form.text_field :street , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor Address"%>
            </div><br>

            <div>
              <%= address_form.label :city, class: "sr-only" %>
              <%= address_form.text_field :city , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor City"%>
            </div><br>

            <div>
              <%= address_form.label :state, class: "sr-only" %>
              <%= address_form.text_field :state , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor State"%>
            </div><br>

            <div>
              <%= address_form.label :zipcode, class: "sr-only" %>
              <%= address_form.text_field :zipcode , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor Pincode"%>
            </div><br>
          <% end %>

          <%= guarentor_form.fields_for :document do |document_form| %>
            <div>
              <%= document_form.label :aadhar_card, class: "sr-only" %>
              <%= document_form.text_field :aadhar_card , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor aadhar card"%>
            </div><br>

            <div>
              <%= document_form.label :pancard, class: "sr-only" %>
              <%= document_form.text_field :pancard , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Guarentor Pancard"%>
            </div><br>
          <%end%>
        <%end%>

        <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
          <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"><%= form.submit %> </button>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= render "devise/shared/footer" %>