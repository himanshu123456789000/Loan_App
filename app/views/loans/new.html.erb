<%= render "devise/shared/navbar" %>
<%= render "devise/shared/notice" %>
<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="height:40rem; margin-bottom:20%">
<div class="bg-white rounded-lg shadow-lg p-4">
  <h1 class="text-xl font-bold mb-4">Customer Details</h1>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="font-medium text-sm mb-0">Email:</p>
        <p><%= @customer.email %></p>
      </div>

      <div>
        <p class="font-medium text-sm mb-1">Contact:</p>
        <p><%= @customer.contact %></p>
      </div>

      <div>
        <p class="font-medium text-sm mb-1">Address:</p>
        <p><%= @customer.address.street %></p>
      </div>
      
      <div>
        <p class="font-medium text-sm mb-1">City:</p>
        <p><%= @customer.address.city %></p>
      </div>

      <div>
        <p class="font-medium text-sm mb-1">Pincode:</p>
        <p><%= @customer.address.zipcode %></p>
      </div>

      <div>
        <p class="font-medium text-sm mb-1">Aadhra Card Details:</p>
        <p><%= @customer.document.aadhar_card %></p>
      </div>

      <div>
        <p class="font-medium text-sm mb-1">Pancard:</p>
        <p><%= @customer.document.pancard %></p>
      </div>

      <%guarentor=Guarentor.find_by(customer_id: @customer.id)%>
      <div>
        <p class="font-medium text-sm mb-1">Guarentor Name:</p>
        <p><%= guarentor.name %></p>
      </div>

    </div>
  </div>
  <div class="w-full max-w-md space-y-8">
    <div>
      <!--<img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">-->
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Apply for New Loan</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
      </p>
    </div>
    <%= form_with(model: [@customer, @loan]) do |form| %>
    <% if @loan.errors.any? %>
        <%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:
        <% @loan.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
    <% end %>

    <div class="-space-y-px rounded-md shadow-sm">
      <div>
      <%= form.label :amount, class: "sr-only" %>
      <%= form.text_field :amount, autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Amount"%>
      </div><br>

      <div>
      <%= form.label :emis, class: "sr-only" %>
      <%= form.text_field :emis, autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "No. of EMI's"%>
      </div><br>

      <div>
      <%= form.label :pending_emi, class: "sr-only" %>
      <%= form.text_field :pending_emi, autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Remaining EMI"%>
      </div><br>

      <div>
      <%= form.label :roi, class: "sr-only" %>
      <%= form.text_field :roi , autofocus: true, class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm", placeholder: "Rate of interest"%>
      </div><br>

      <%= form.hidden_field :status, value:"pending" %>
      
      <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
            <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"><%= form.submit %> </button>
          </div>
    <% end %>
    </div>
    </div>
</div>
<%= render "devise/shared/footer" %>

